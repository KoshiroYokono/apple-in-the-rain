<script>
  const realApple = document.getElementById('appleClicked');

  //ボタンがクリックされた時
  realApple.addEventListener('click', changeAppleImage);
  function changeAppleImage(e) {
    if (e.target.classList.contains('clicked')) {
      e.target.classList.remove("clicked");
      e.target.style.opacity = 0;
    } else {
      e.classList.add("clicked");
      e.target.style.opacity = 1;
    }
  };
</script>

